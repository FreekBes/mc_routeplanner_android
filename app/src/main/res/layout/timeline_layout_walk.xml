<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="46sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/timelineIcon"
        android:layout_width="40sp"
        android:layout_height="match_parent"
        android:layout_marginStart="6sp"
        android:layout_marginEnd="6sp"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        android:scaleType="fitXY"
        android:tint="@color/colorAccent"
        android:tintMode="src_atop"
        app:srcCompat="@drawable/timeline_walk" />

    <TextView
        android:id="@+id/textMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70sp"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:minHeight="70sp"
        android:paddingStart="6sp"
        android:paddingTop="20sp"
        android:paddingEnd="6sp"
        android:paddingBottom="20sp"
        android:text="Loop zoveel blokken naar dit punt (coÃ¶rdinaten)"
        android:textColor="@color/mainTextColor"
        android:textStyle="italic" />

</LinearLayout>
